root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx,cjs,mjs,json,yml,yaml,css,scss,html,md,mdx,sh,bash}]
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4

[*.{ps1,psm1,psd1}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab